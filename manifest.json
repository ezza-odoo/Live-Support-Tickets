{
    "manifest_version": 3,
    "name": "Odoo Live Support Tickets",
    "version": "1.0",
    "description": "Create tickets from discuss",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "windows"
    ],
    "host_permissions": [
      "*://*.odoo.com/*"
    ],
    "action": {
      "default_title": "Open Ticket Form"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
    {
        "matches": ["*://*.odoo.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }
    ],
    "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  